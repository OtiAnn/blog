<div class="posts">
  <div class="content">
    <h4 style="text-align: center;">文章Tags</h4>
    <br>
  </div>
</div>

<ul class="articleList" style="width: 80%; margin: 0 auto;">
  <% blog.tags.each do |tag, articles| %>
    <li style="line-height: 2; border: none; font-size: 20px; display: inline;">
      <%= link_to "#{tag} (#{articles.size})", tag_path(tag) %>
    </li>
  <% end %>
</ul>