<% wrap_layout :layout do %>
  <div class="posts">
    <div class="header">
      <h1><%= current_article.title %>
      <span class="date"><%= current_article.date.strftime('%b %d, %Y') %></span></h1>
    </div>
    <div class="content">
      <%= yield %>
      <span style="font-size: 14px;" class="lsf-icon" title="tag">
        <% current_article.tags.each do |tag| %>
          <li style="line-height: 2; border: none; font-size: 16px; display: inline;">
            <%= link_to tag, tag_path(tag) %>
          </li>
        <% end %>
      </span>
    </div>
    <div class="newer-older-block">
      <% if current_article.next_article.present? %>
        <span class="newer"><%= link_to "#{current_article.next_article.title}", current_article.next_article %></span>
      <% end %>
      <% if current_article.previous_article.present? %>
        <span class="older"><%= link_to "#{current_article.previous_article.title}", current_article.previous_article %></span>
      <% end %>
    </div>
    <iframe src="//www.facebook.com/plugins/like.php?href=<%= "http://blog.annideas.com#{current_article.url}" %>&amp;width=750px&amp;layout=button_count&amp;action=like&amp;show_faces=true&amp;share=true&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; max-width:750px; height:21px;" allowTransparency="true"></iframe>
    <%= disqus %>
  </div>
<% end %>
