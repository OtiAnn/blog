<% wrap_layout :layout do %>
  <div class="posts">
    <div class="header">
      <h1><%= current_article.title %>
      <span class="date"><%= current_article.date.strftime('%b %d, %Y') %></span></h1>
    </div>
    <div class="content">
      <%= yield %>
      <span style="font-size: 18px;" class="lsf-icon" title="tag">
        <% current_article.tags.each do |tag| %>
          <li style="line-height: 2; border: none; font-size: 20px; display: inline;">
            <%= link_to tag, tag_path(tag) %>
          </li>
        <% end %>
      </span>
    </div>
    <%= disqus %>
  </div>
<% end %>
