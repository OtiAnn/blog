---
pageable: true
per_page: 10
---

<ul class="articleList">
  <% page_articles.each_with_index do |article| %>
    <li>
      <span class="date"><%= article.date.strftime('%b %d, %Y') %></span>
      <span class="title"><%= link_to article.title, article %></span>
      <div class="summary"><%= article.summary(100) %></div>
    </li>
  <% end %>
</ul>
<div class="posts">
  <div class="content">
    <div class="paginate">
      <% if paginate && num_pages > 1 %>
        <span>Page <%= page_number %> of <%= num_pages %></span>
        <% if prev_page %>
          <span><%= link_to 'Previous page', prev_page %></span>
        <% end %>
      <% end %>
      <% if paginate %>
        <% if next_page %>
          <span><%= link_to 'Next page', next_page %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>